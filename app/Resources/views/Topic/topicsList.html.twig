

<table id="table-topics" class="table table-striped table-hover">
    <thead>
        <tr>
            <th> {{ knp_pagination_sortable(pagination, 'Topic', 't.name') }} </th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for topic in pagination %}
            <tr id="{{ topic.id }}">
                <td>{{topic.name}}</td>
                <td class="actions">
                    <a title="Edit" href="{{ path('app_topic_edit', { id: topic.id } ) }}" class="btn btn-bg btn-primary glyphicon glyphicon-edit"></a>
                    <a title="Delete" id="delete-link" href="#" onClick="deleteRow( {{ topic.id }} , $(this).closest('table').attr('id'), '{{ path('app_topic_delete', { id: topic.id } ) }}')" class="btn btn-bg btn-danger btn-delete glyphicon glyphicon-trash"></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>   


