<table id="table-reviews" class="table table-striped table-hover">
    <thead>
        <tr>
            <th> {{ knp_pagination_sortable(pagination, 'Id', 'r.id') }} </th>
            <th> {{ knp_pagination_sortable(pagination, 'Description', 'r.description') }} </th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for review in pagination %}
            <tr id="{{ review.id }}">
                <td>{{review.id}}</td>
                <td width="65%">{{review.description}}</td>
                <td class="actions">
                    <a title="Edit" href="{{ path('app_review_edit', { id: review.id } ) }}" class="btn btn-bg btn-primary glyphicon glyphicon-edit"></a>
                    <a title="Delete" id="delete-link" href="#" onClick="deleteRow( {{ review.id }} , $(this).closest('table').attr('id'), '{{ path('app_review_delete', { id: review.id } ) }}')" class="btn btn-bg btn-danger btn-delete glyphicon glyphicon-trash"></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>


