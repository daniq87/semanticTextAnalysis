<table id="table-criterias" class="table table-striped table-hover">
    <thead>
        <tr>
            <th> {{ knp_pagination_sortable(criteriaList, 'Name', 'c.name') }} </th>
            <th>{{ 'Actions'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        {% for criteria in criteriaList %}
            <tr id="{{ criteria.id }}">
                <td>{{criteria.name}}</td>
                <td class="actions">
                    <a title="Edit" href="#" onClick="$('#tabFormCriteria').removeClass('hidden');activeTab('formCriteria', '{{ path('app_criteria_edit', { id: criteria.id, topicId: criteria.topic.id }) }}')" class="btn btn-bg btn-primary glyphicon glyphicon-edit"></a>
                    <a title="Delete" id="delete-link" href="#" onClick="deleteRow( {{ criteria.id }} , $(this).closest('table').attr('id'), '{{ path('app_criteria_delete', { id: criteria.id } ) }}')" class="btn btn-bg btn-danger btn-delete glyphicon glyphicon-trash"></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>


{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(criteriaList) }}
</div>    

