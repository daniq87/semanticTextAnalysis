
<table id="table-negativeAttributes" class="table table-striped table-hover">
    <thead>
        <tr>
            <th> {{ knp_pagination_sortable(pagination, 'Name', 'a.name') }} </th>
            <th>{{ 'Actions neg' }}</th>
        </tr>
    </thead>
    <tbody>
        {% for attribute in pagination %}
            <tr id="{{ attribute.id }}">
                <td width="65%">{{attribute.name}}</td>
                <td class="actions">
                    <a title="Edit" href="{{ path('app_negative_attribute_edit', { id: attribute.id } ) }}" class="btn btn-bg btn-primary glyphicon glyphicon-edit"></a>
                    <a title="Delete" id="delete-link" href="#" onClick="deleteRow( {{ attribute.id }} , $(this).closest('table').attr('id'), '{{ path('app_negative_attribute_delete', { id: attribute.id } ) }}')" class="btn btn-bg btn-danger btn-delete glyphicon glyphicon-trash"></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>


